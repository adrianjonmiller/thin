{
  "name": "thin.css",
  "version": "1.0.22",
  "description": "Simple, css framework for apps.",
  "main": "dist/thin.css",
  "unpkg": "dist/thin.css",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "clean": "cleandir ./dist",
    "compile": "sass src/2.0/index.scss dist/thin.css --style compressed",
    "autoprefix": "postcss dist/thin.css --use autoprefixer -b 'last 2 versions' -d dist",
    "build": "yarn clean && yarn compile && yarn autoprefix"
  },
  "nodemonConfig": {
    "ignore": [
      "src/app/**/*.js",
      "public/**/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adrianjonmiller/thin.git"
  },
  "keywords": [
    "sass",
    "scss",
    "css",
    "cdn"
  ],
  "author": "Adrian J Miller",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/adrianjonmiller/thin/issues"
  },
  "homepage": "https://thin.style",
  "devDependencies": {
    "autoprefixer": "10.2.4",
    "clean-dir": "1.0.3",
    "fibers": "5.0.0",
    "postcss": "8.2.6",
    "sass": "1.32.8",
    "postcss-cli": "8.3.1"
  }
}
