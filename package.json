{
  "name": "thin.css",
  "version": "1.0.1",
  "description": "Simple, css framework for apps.",
  "main": "dist/thin.css",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "NODE_ENV=production npm run build && NODE_ENV=production node docs/index.js",
    "test": "PORT=3000 npm run build && node docs",
    "build": "babel lib -d docs --presets babel-preset-env",
    "watch": "PORT=3000 nodemon lib --exec babel-node --presets babel-preset-env",
    "build-thin": "node-sass --include-path scss src/default/index.scss dist/thin.css && npm run autoprefix",
    "autoprefix": "postcss dist/thin.css --use autoprefixer -b 'last 2 versions' -d dist",
    "watch-css": "nodemon -e scss -x \"npm run build-thin\""
  },
  "nodemonConfig": {
    "ignore": [
      "src/app/**/*.js",
      "public/**/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adrianjonmiller/thin.git"
  },
  "keywords": [
    "sass",
    "scss",
    "css",
    "cdn"
  ],
  "author": "Adrian J Miller",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/adrianjonmiller/thin/issues"
  },
  "homepage": "https://github.com/adrianjonmiller/thin#readme",
  "dependencies": {
  },
  "devDependencies": {
    "mathsass": "0.10.1",
    "node-sass": "4.11.0",
    "nodemon": "1.18.9",
    "postcss": "7.0.13",
    "postcss-cli": "6.1.1",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-loader": "8.0.4",
    "babel-plugin-add-module-exports": "1.0.0",
    "babel-preset-env": "1.7.0",
    "css-loader": "2.0.2",
    "express": "4.16.4",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "feather-icons": "4.9.0",
    "mini-css-extract-plugin": "0.5.0",
    "node-fetch": "2.3.0",
    "path": "0.12.7",
    "postcss-cssnext": "3.1.0",
    "postcss-import": "12.0.1",
    "postcss-loader": "3.0.0",
    "postcss-nested": "4.1.1",
    "postcss-simple-vars": "5.0.1",
    "postcss-stack": "1.5.0",
    "reshape-express": "1.0.0",
    "reshape-standard": "3.3.0",
    "style-loader": "0.23.1",
    "symbiotic": "0.1.45",
    "webpack": "4.28.2",
    "webpack-dev-middleware": "3.4.0",
    "webpack-hot-middleware": "2.24.3"
  }
}
